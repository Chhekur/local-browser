{
  "name": "local-browser",
  "productName": "Local Browser",
  "version": "1.0.1",
  "description": "Share your localhost in a unique way",
  "author": "",
  "main": "main.js",
  "scripts": {
    "start": "electron ."
  },
  "license": "MIT",
  "dependencies": {
    "ajax-request": "^1.2.3",
    "dropbox-fs": "^0.3.1",
    "electron-updater": "^4.0.6",
    "ngrok": "^3.2.7",
    "mousetrap": "^1.6.2"
  },
  "devDependencies": {
    "electron": "^7.2.4",
    "electron-builder": "^20.38.4"
  },
  "build": {
    "appId": "com.chhekur.local-browser",
    "mac": {
      "category": "",
      "target": [
        "zip",
        "dmg"
      ],
      "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icons/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icons/icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "chhekur",
        "repo": "local-browser"
      }
    ]
  }
}
